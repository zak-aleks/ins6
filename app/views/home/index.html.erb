<div class="posts">
  <% @posts.each do |post| %>
  <% if post.image_url %>
  <section class="post">
    <div class="user">
      <div class="avatar">

      <%= image_tag post.user.image.url if post.user.image.url %>

      </div>
      <div class="username">

      <%= link_to post.user.username, user_path(post.user_id)%>
      </div>
    </div>
    <%= image_tag post.image_url, class: 'main-image' %>

    <div class="description">
      <p><strong><%= post.total_likes %> likes<strong/><p/>
      <%= post.description %>
    </div>
  </section>
  <% end %>
  <% end %>
</div>
