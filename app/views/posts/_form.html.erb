<%= form_for @post, html: { multipart: true } do |f| %>

    <div class="form-group">
    <%= f.text_field :description %>
    </div>
    <div class="form-group">
    <%= f.file_field :image %>
    </div>
    <div class="form-group">
    <%= f.hidden_field :image_cache %>
    </div>

    <br>

    <div class="text-center">
    <%= f.submit 'Create Post', class: 'btn btn-primary' %>
    </div>

<% end %>
