<div class="user-profile">
  <div class="profile row">
    <div class="col-md-4 avatar">
      <div class="wrapper">
          <% if @user.image_url %>
        <%= image_tag @user.image_url %>
        <% end %>
      </div>
    </div>

    <div class="col-md-8 basic-info">
      <div class="user-wrapper">
        <h2 class="username"><%= current_user.username %></h2>
        <a class="edit-profile" href="<%= edit_user_path(current_user) %>">
          <button>Edit Profile</button>
        </a>
      </div>
      <ul class="posts">
        <li><span><%= current_user.posts.count %></span> posts</li>
        <li><span>12M</span> followers</li>
        <li><span>34</span> following</li>
        <h2 class="name"><%= current_user.first_name + " " + current_user.last_name %></h2>
      </ul>
    </div>
  </div>

<div class="user-tabs">
  <a class="tab active" href=""><i class="fa fa-th"></i>POSTS</a>
</div>


<div class="user-images">
  <% @posts.each do |post|%>
    <% if post.image_url %>
    <div class="wrapper">
       <%=link_to post_path(post) do %>
    <%= image_tag post.image_url %>
      <% end %>
    </div>
  <% end %>
  <% end %>
</div>
</div>
