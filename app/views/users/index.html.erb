<div class="posts">
  <% @posts.each do |post| %>
  <% if post.image_url %>
  <section class="post">
    <div class="user">
      <div class="avatar">
        <%= image_tag @user.image_url if @user.image_url %>
      </div>
      <div class="username">
        <%= post.user.username %>
      </div>
    </div>
    <%= image_tag post.image_url, class: 'main-image' %>
    
    <div class="description">
      <%= post.description %>
    </div>
  </section>
  <% end %>
  <% end %>
</div>
